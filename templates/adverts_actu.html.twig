{% extends 'base.html.twig' %}

{% block title %}Actu{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>

    {% if ( app.session.get('id') == null) %}
        <a href="/connection"><h4>Se connecter</h4></a>
        <a href="/inscription"><h4>Inscription</h4></a>
        {% else %}
            <a href="/deconnexion"><h4>Se déconnecter</h4></a>
            <a href="/advert_form"><h4>Déposer une annonce</h4></a>
            <a href="/user/favorites"><h4>Mes favoris</h4></a>
            <a href="/profil"><h4>Mon compte</h4></a>
    {% endif %}

    <li>
        {% for advert in adverts %}
             <a href="/advert/{{ advert.getId() }}"><h2>{{ advert.getAdvertTitle() }}</h2></a>
             <h3>{{ advert.getAdvertPrice() }} €</h3>
             <h4>{{ advert.getAdvertCategory() }}</h4>
             <h4>{{ advert.getAdvertLocalisation() }}</h4>
             <h5>{{ advert.getAdvertDate()|date }}</h5>
        {% endfor %}
    </li>

{% endblock %}